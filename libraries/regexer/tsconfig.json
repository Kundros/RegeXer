{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@regexer/*": ["./src/*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["src/**/*.ts", "dist/index.d.ts"],
  "exclude": ["node_modules"]
}