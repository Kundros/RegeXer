{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist/esm",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./types",
    "paths": {
      "@regexer/*": ["./src/*"],
      "@models/*": ["./src/models/*"],
      "@exceptions/*": ["./src/exceptions/*"],
      "@structures/*": ["./src/structures/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@browser/*": ["./src/browser/*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}