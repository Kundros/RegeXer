{
  "name": "regex-visualizer-extension",
  "displayName": "Regex Visualizer / Debugger",
  "icon": "logo.png",
  "author": {
    "name": "Dominik Kundra"
  },
  "publisher": "Kundros",
  "description": "Regex Visualizer & Debugger",
  "version": "0.0.2",
  "repository": {
    "url": "https://github.com/Kundros/regex-visualisation-thesis/tree/master/libraries/regex-visualizer-extension"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "regex-visualizer-extension.openRegexVisualizer",
        "title": "Open Regex Visualizer & Debuger"
      },
      {
        "command": "regex-visualizer-extension.updateRegRegexVisualizer",
        "title": "Update Reg Regex Visualizer & Debuger"
      }
    ],
    "configuration": {
      "title": "RegexVisualizer",
      "properties": {
        "regexVisualizer.editor.hover.enable": {
          "type": "boolean",
          "default": true,
          "scope": "machine-overridable",
          "editPresentation": "singlelineText",
          "description": "Enable hover on regex in editor."
        },
        "regexVisualizer.editor.hover.newWindow": {
          "type": "boolean",
          "default": false,
          "scope": "machine-overridable",
          "editPresentation": "singlelineText",
          "description": "Retain window for visualisation, if you load new regex from vscode."
        },
        "regexVisualizer.webview.autoSave.enable": {
          "type": "boolean",
          "default": true,
          "scope": "machine-overridable",
          "editPresentation": "singlelineText",
          "description": "Auto save webview data."
        },
        "regexVisualizer.webview.autoSave.delay": {
          "type": "number",
          "default": 500,
          "minimum": 0,
          "maximum": 100000,
          "scope": "machine-overridable",
          "editPresentation": "multilineText",
          "description": "Delay in ms (miliseconds) before saving webview while typing"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "regex-visualizer-extension.updateRegRegexVisualizer",
          "when": "false"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build:webpack": "webpack",
    "watch:webpack": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "vsce": "vsce package --out \"release\"",
    "compile:tests": "tsc -p . --outDir out",
    "watch:tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/regexer": "file:../regexer/types",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@kundros/regex-visualisation": "file:../regex-visualisation",
    "@kundros/regexer": "file:../regexer",
    "html-loader": "^4.2.0",
    "threads": "^1.7.0"
  }
}
