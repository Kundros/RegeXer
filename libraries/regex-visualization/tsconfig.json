{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Node",
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["DOM", "WebWorker"],
    "esModuleInterop": true,
    "baseUrl": "./",
    "typeRoots": [
      "./customTypes",
      "./node_modules/@types/"
    ],
  },
  "include": ["src/**/*", "./customTypes/index.d.ts", "./customTypes/declarations.d.ts"],
  "exclude": ["node_modules", "dist"]
}
