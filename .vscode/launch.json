{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Regexer",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\libraries\\regexer\\dist\\cjs\\index.js",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },

        {
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/libraries/regex-visualizer-extension"
			],
			"outFiles": [
				"${workspaceFolder}/libraries/regex-visualizer-extension/dist/**/*.js"
			],
			"preLaunchTask": "${defaultBuildTask}"
		}
    ]
}